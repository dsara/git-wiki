{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {            
            "taskName": "start mongo database",
            "command": "E:/mongodb/server/3.4/bin/mongod.exe --dbpath e:/mongodb/data/db",
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "webpack dev build",
            "command": "webpack",
            "args": [
                "--config",
                "webpack.dev.js"
            ],
            "isShellCommand":true,
            "showOutput": "always"
        }
    ]
}